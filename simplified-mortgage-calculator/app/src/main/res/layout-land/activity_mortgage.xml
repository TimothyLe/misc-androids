
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="16dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="100dp"
    android:paddingTop="16dp" tools:context=".MortgageActivity">

    <!--The inputs-->
    <!--Home Value-->
    <TableRow android:id="@+id/tableRow0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/homeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_value" />

        <EditText
            android:id="@+id/homeValueEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/double_zero"/>

    </TableRow>
    <!--Down payment-->
    <TableRow android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/downPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/down_payment" />

        <EditText
            android:id="@+id/downPaymentEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/double_zero" />

    </TableRow>
    <!--Interest Rate-->
    <TableRow android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/interestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interest_rate" />

        <EditText
            android:id="@+id/interestRateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/double_zero" />
    </TableRow>
    <!--Terms-->
    <TableRow android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms" />

        <EditText
            android:id="@+id/termsEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/int_zero" />
    </TableRow>
    <!--Property Tax rate-->
    <TableRow android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/propertyTaxRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interest_rate" />

        <EditText
            android:id="@+id/propertyTaxRateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/double_zero" />

    </TableRow>

    <!--Calculate and reset-->
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate" />
    </TableRow>

    <!--Output-->
    <!--Monthly Payment-->
    <TableRow android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/monthlyPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_payment_amount" />

        <EditText
            android:id="@+id/monthlyPaymentEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:focusable="false"
            android:longClickable="false"
            android:text="@string/double_zero"/>
    </TableRow>
    <!--Total interest paid-->
    <TableRow android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalInterestPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_interest_paid" />

        <EditText
            android:id="@+id/totalInterestPaidEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:focusable="false"
            android:longClickable="false"
            android:text="@string/double_zero"/>
    </TableRow>
    <!--Total property tax paid-->
    <TableRow android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalPropertyTaxPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_property_tax_paid" />

        <EditText
            android:id="@+id/totalPropertyTaxPaidEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:focusable="false"
            android:longClickable="false"
            android:text="@string/double_zero"/>
    </TableRow>
    <!--Pay off date-->
    <TableRow android:id="@+id/tableRow9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/payOffDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_off_date" />

        <EditText
            android:id="@+id/payOffDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:focusable="false"
            android:longClickable="false"
            android:text="@string/int_zero"/>
    </TableRow>
</TableLayout>